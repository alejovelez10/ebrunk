<div class="row" style="background: #fff; border-radius: 4px;">
 <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="col-md-12">
      <div class="row mb-3">
         <div class="col-md-10 col-md-offset-1">
            <h1 align="center">Peticion de video llamada</h1><br>
             <% @contact.each do |contacto| %>
                 <div class="card" style="padding: 20px;">
                    <div class="card-body">
                        <div class="row" style="padding: 9px;">
                         <div class="row" style="margin-bottom: 10px;">
                          <div class="col-md-1">
                            <b>Nombre</b><br>
                            <%= contacto.name%>
                          </div>

                          <div class="col-md-6" style="padding-left: 50px;">
                            <b>Email</b><br>
                            <%= contacto.email%>
                          </div>

                          <div class="col-md-3 icon">
                            <b>Llamada <img src="http://icons.iconarchive.com/icons/martz90/circle-addon2/512/google-hangouts-icon.png"></b>
                            <%= contacto.state_call%>
                            <%= contacto.datetime_call%>
                          </div>
                        </div>


                          <div class="col-md-10" style="padding: 0px;">
                            <b>Mensage</b><br>
                            <%= contacto.message%>
                          </div>

                          <div class="col-md-2" style="padding: 0px;">
                            <b></b><br>
                            <%= link_to "Programar Call", crear_call_path(contacto.id), remote: true , class: "btn btn-primary"%>
                            <%= contacto.url_call%>
                          </div>

                        </div>
                    </div>
                </div>
              <% end -%>
              </div>
            <div class="body">
          <div id="real_time_chart" class="dashboard-flot-chart"></div>
        </div>
      </div>
    </div>
</div>
