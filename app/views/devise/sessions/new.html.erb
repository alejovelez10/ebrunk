<% if notice.present? %>
    <div class="container" style="margin-bottom: 50px">
        <div class="col-md-12" style="padding: 0;">
            <div id="notice" class="alert alert-warning alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <%= notice %>
                </div>      
            </div>
        </div>
    </div>
<% end%>

<div class="container">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="text-center">
                <img 
                    src="https://dnuba.s3.amazonaws.com/uploads/bank_image/achivo/59/WhatsApp_Image_2018-10-25_at_1.53.16_PM.jpeg" 
                    alt=""
                    class="img-fluid mt-5"
                >
            </div>
            <div class="card login-box">
                <div class="card-body">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: "login-form"}) do |f| %>

                    <div class="form-group">
                        <label class="control-label">Email</label>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", :placeholder => "Email" %>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Password</label>
                        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", :placeholder => "Password" %>
                    </div>

                    <div class="form-group btn-container mt-5">
                        <%= f.submit "Ingresar", class: "btn btn-secondary btn-block btn-submit" %>
                    </div>

                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

