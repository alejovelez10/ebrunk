<div class="container">
  <div class="row">
    <h2 align="center">Editar Cuenta</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="col-md-3">
         <%= f.label "Nombre" %>
          <div class="input-group">
            <span class="input-group-addon"><i class="fas fa-user" style = "color: #fff;" ></i></span>
           <%= f.text_field :name, autofocus: true, autocomplete: "email", class: "form form-control" %>
        </div>
      </div>

      <div class="col-md-3">
         <%= f.label "Apellido" %>
          <div class="input-group">
            <span class="input-group-addon"><i class="fas fa-user" style = "color: #fff;" ></i></span>
          <%= f.text_field :apellido, autofocus: true, class: "form form-control" %>
        </div>
      </div>

      <div class="col-md-3">
         <%= f.label "Edad" %>
          <div class="input-group">
            <span class="input-group-addon"><i class="fas fa-user" style = "color: #fff;" ></i></span>
          <%= f.number_field :age, autofocus: true, class: "form form-control" %>
        </div>
      </div>

      <div class="col-md-4">
         <%= f.label "Email" %>
          <div class="input-group">
            <span class="input-group-addon"><i class="fas fa-user" style = "color: #fff;" ></i></span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form form-control" %>
        </div>
      </div>

      <div class="col-md-3">
         <%= f.label "Pais" %>
          <div class="input-group">
            <span class="input-group-addon"><i class="fas fa-user" style = "color: #fff;" ></i></span>
            <%= f.select :country_id,get_country.map { |u| [u.name, u.id] },{ include_blank: false },{ class: 'form form-control'  }%>
        </div>
      </div>



      <div class="col-md-3">
        <%= f.label "Opcion de Video llamada" %><br />
        <%= f.check_box :video_call, autofocus: true, class: "form form-control" %>
      </div>

      <div class="col-md-3">
         <%= f.label "Imagen de Perfil" %>
          <div class="input-group">
            <span class="input-group-addon"><i class="fas fa-user" style = "color: #fff;" ></i></span>
            <%= f.file_field :image, autofocus: true, class: "form form-control" %>
        </div>
      </div>


       <div class="field">
        <%= f.label "Dirección de Residencia" %><br />
        <%= f.text_field :address, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label "Ciudad de Residencia" %><br />
        <%= f.text_field :city, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label "Telefono Celular" %><br />
        <%= f.text_field :mobile, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label "Telefono De Residencia" %><br />
        <%= f.text_field :phone, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label "Tipo de Indentificacion" %><br />
        <%= f.select 'type_of_identification', options_for_select(["Seleccione", "Cedula de Ciudadania ", "Cedula de Extrangeria ", "Pasaporte", "Id"  ]), {},{:class => ''}%>
      </div>

      <div class="field">
        <%= f.label "Numero de Documento" %><br />
        <%= f.text_field :number_document, autofocus: true %>
      </div>



      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label "Contraseña" %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label "Contraseña Actual" %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Guardar" %>
      </div>

    <% end %>
  </div>
</div>



<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
