       <%= form.label "Titulo del Anuncio" %>
       <div class="input-group">
          <span class="input-group-addon"><i class="fas fa-user" style = "color: #fff;" ></i></span>
              <%= form.text_field :title , class: "form form-control"%>
        </div>
      </div>

      <br><br><br><br>

      <div class="col-md-4">
       <%= form.label "Tipo de oferta" %>
        <div class="input-group">
          <span class="input-group-addon"><i class="fas fa-user" style = "color: #fff;" ></i></span>
            <%val2 = "" 
                        action_name == "edit" ? val2 = @properties.type_of_offer : val2 = "" %>
             <%= form.select 'type_of_offer', options_for_select(["Seleccione", "Venta", "Arriendo", "Alquiler Vacacional"], val2), {},{:class => 'form form-control select'}%>
        </div>
      </div>

      <div class="espacio"></div>

      <div class="col-md-4">
        <%= form.label "Tipo de inmueble" %>
              <%val1 = "" 
                        action_name == "edit" ? val1 = @properties.type_of_offer : val1 = "" %>
