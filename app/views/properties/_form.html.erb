    <div class="col-md-3">
      <div class="field">
        <%= form.label "Latitud" %><br>
        <%= form.number_field :latitude , class: "form form-control"%>
      </div>
    </div>

    <div class="col-md-3">
      <div class="field">
        <%= form.label "Longitud" %><br>
        <%= form.number_field :length , class: "form form-control"%>
      </div>
    </div>
    -->
    <% end %>

